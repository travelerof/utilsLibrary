<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_customer_bg"
    android:id="@+id/dialog_layout">

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/color_333333"
        android:gravity="center"
        android:visibility="gone"/>
    <View
        android:id="@+id/dialot_title_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5"
        android:background="@color/color_f0f0f0"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/dialog_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">
        <TextView
            android:id="@+id/dialog_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/color_333333"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"/>
    </LinearLayout>
    <View
        android:id="@+id/dialog_bottom_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5"
        android:background="@color/color_f0f0f0"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/dialog_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_cancel_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/color_333333"
            android:text="取消"
            android:gravity="center"
            android:background="@drawable/selector_left_bottom"
            android:visibility="gone"/>
        <View
            android:id="@+id/dialog_bottom_click_line_view"
            android:layout_width="@dimen/dimen_0_5"
            android:layout_height="match_parent"
            android:background="@color/color_f0f0f0"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/dialog_sure_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/colorPrimary"
            android:text="确定"
            android:gravity="center"
            android:background="@drawable/selector_right_bottom"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>